<configuration>
  <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>

  <root level="warn">
    <appender-ref ref="STDERR" />
  </root>

<!--
  <logger name="nl.esciencecenter.octopus" level="info" />
  <logger name="nl.esciencecenter.amuse" level="debug" />
  <logger name="ibis.smartsockets" level="error" />
-->

  <!-- sends logs to logback-beagle -->
  <consolePlugin />

</configuration>
